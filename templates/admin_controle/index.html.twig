{% extends 'base.html.twig' %}

{% block title %}Hello AdminControleController!{% endblock title%}

{% block body %}
<div class="container">
    <div class="card mt-5">
        <div class="card-header">
           PRODUCT LIST
            <a href="{{ url('edit_product') }}" class=" btn btn-primary" id="add">Add product</a>
        </div>
        <div class="card-body">
            <table class="table table-dark table-striped"  id="table">
                <thead>
                <tr>
                    <th>item</th>
                    <th>type</th>
                    <th>prix</th>
                    <th>quanite</th>
                    <th>images</th>
                    <th>traitement</th>
                </tr>
                </thead>
                <tbody>
                {% for donnee in donnees %}
                    <tr>
                        <td>{{ donnee.nameProduct }}</td>
                        <td>{{ donnee.typeProduct }}</td>
                        <td>{{ donnee.price}} DH</td>
                        <td>{{ donnee.quantiteProduct }}</td>
                        <td><img src="{{asset('uploads/images/'~donnee.image)}}" alt="{{ donnee.image }}" height="90px" width="90px"></td>
                        <td>
                            <a  href="{{path('edit_product',{id:donnee.id})}}" class="btn btn-outline-warning">modify</a>
                            <form id="{{donnee.id}}" method="post" action="{{path('delete_product',{id:donnee.id})}}"></form>
                                <button onclick="deleteitem('{{donnee.id}}')"  class="btn btn-outline-danger">delete</button>

                            </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>

        </div>
    </div>
</div>
{% endblock %}
